version: '3.9'

services:
  web:
    image: {{ nginx_stream_proxy_container_image }}
    container_name: {{ nginx_stream_proxy_deployment_name }}
    volumes:
      - /srv/{{ nginx_stream_proxy_deployment_name }}/conf/conf.d:/etc/nginx/conf.d
      - /srv/{{ nginx_stream_proxy_deployment_name }}/conf/nginx.conf:/etc/nginx/nginx.conf
    restart: always
    networks:
      {{ nginx_stream_proxy_container_macvlan_network }}:
        ipv4_address: {{ nginx_stream_proxy_container_ip }}

networks:
  {{ nginx_stream_proxy_container_macvlan_network }}:
    external: true
